{
    "name": "nodejs-mentoring-program",
    "version": "0.0.1",
    "description": "NodeJS Mentoring Program Project",
    "main": "dist/index.js",
    "scripts": {
        "dev:lint": "esw -w --ext .ts --color",
        "dev:serve": "nodemon src/index.ts",
        "predev": "npm run docker:up",
        "dev": "cross-env NODE_ENV=development npm-run-all -l -p dev:**",
        "compile": "tsc",
        "build": "npm-run-all -l lint compile",
        "serve": "node -r ./scripts/register-prod.js ./dist/index.js",
        "start": "cross-env NODE_ENV=production npm-run-all -l build serve",
        "lint:prettier": "prettier src/**/*.ts --write",
        "lint:eslint": "eslint src/**/*.ts --fix",
        "lint": "npm-run-all -l lint:prettier lint:eslint",
        "docker:up": "docker-compose up -d",
        "docker:down": "docker-compose down",
        "migrate": "ts-node -r ./scripts/register-dev.js ./src/core/database/knex/migrations.ts",
        "migrate:make": "npm run migrate -- -t make",
        "migrate:latest": "npm run migrate -- -t latest",
        "migrate:rollback": "npm run migrate -- -t rollback",
        "seed": "ts-node -r ./scripts/register-dev.js ./src/core/database/knex/seeds.ts",
        "seed:make": "npm run seed -- -t make",
        "seed:run": "npm run seed -- -t run"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/markoboy/nodejs-mentoring-program.git"
    },
    "keywords": [
        "nodejs"
    ],
    "author": "Athanasios Markou",
    "license": "ISC",
    "bugs": {
        "url": "https://github.com/markoboy/nodejs-mentoring-program/issues"
    },
    "homepage": "https://github.com/markoboy/nodejs-mentoring-program#readme",
    "devDependencies": {
        "@types/command-line-args": "^5.2.0",
        "@types/cors": "^2.8.12",
        "@types/express": "^4.17.13",
        "@types/faker": "^5.5.9",
        "@types/helmet": "^4.0.0",
        "@types/inversify": "^2.0.33",
        "@types/jsonwebtoken": "^8.5.8",
        "@types/lodash.isequal": "^4.5.5",
        "@types/node": "^16.10.3",
        "@typescript-eslint/eslint-plugin": "^5.0.0",
        "@typescript-eslint/parser": "^5.0.0",
        "cross-env": "^7.0.3",
        "eslint": "^7.32.0",
        "eslint-config-prettier": "^8.3.0",
        "eslint-plugin-import": "^2.25.2",
        "eslint-plugin-prettier": "^4.0.0",
        "eslint-watch": "^7.0.0",
        "kill-port": "^1.6.1",
        "nodemon": "^2.0.12",
        "npm-run-all": "^4.1.5",
        "prettier": "^2.4.1",
        "ts-node": "^10.2.1",
        "typescript": "^4.4.3"
    },
    "dependencies": {
        "command-line-args": "^5.2.0",
        "cors": "^2.8.5",
        "dotenv": "^10.0.0",
        "express": "^4.17.1",
        "express-joi-validation": "^5.0.0",
        "faker": "^5.5.3",
        "helmet": "^5.0.2",
        "inversify": "^6.0.1",
        "joi": "^17.4.2",
        "jsonwebtoken": "^8.5.1",
        "knex": "^0.95.14",
        "lodash.isequal": "^4.5.0",
        "path-to-regexp": "^0.1.7",
        "pg": "^8.7.1",
        "reflect-metadata": "^0.1.13",
        "tsconfig-paths": "^3.11.0",
        "winston": "^3.5.1"
    }
}
